{# FreeThemeOne: Set theme variables #}
{% set iconPack = theme_config('ft-icon-set') %}

{# ---------------- END: SET TEMPLATE VARS ---------------- #}

{# FreeThemeOne: Adjust icon #}
{% block component_filter_property_select_preview_checkmark_icon %}
    {% if iconPack == "feather" %}
        {% sw_icon 'check' style {pack: iconPack, size: 'xs'} %}
    {% else %}
        {# Default icon #}
        {% sw_icon 'checkmark' style {pack: 'solid', size: 'xs'} %}
    {% endif %}
{% endblock %}
