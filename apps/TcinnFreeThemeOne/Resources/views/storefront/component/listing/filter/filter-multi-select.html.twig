{% sw_extends '@Storefront/storefront/component/listing/filter/filter-multi-select.html.twig' %}

{# FreeThemeOne 'component/listing/filter/filter-multi-select.html.twig' #}

{# ---------------- START: SET TEMPLATE VARS ---------------- #}

{# FreeThemeOne: Set theme variables #}
{% set iconPack = theme_config('ft-icon-set') %}

{# ---------------- END: SET TEMPLATE VARS ---------------- #}

{# FreeThemeOne: Adjust icon #}
{% block component_filter_multi_select_toggle_icon %}
    {% if iconPack == "feather" %}
        {% sw_icon 'chevron-down' style {
            pack: iconPack, size: 'xs', class: 'filter-panel-item-toggle'
        } %}
    {% else %}
        {# Default icon #}
        {% sw_icon 'arrow-medium-down' style {
            pack: 'solid', size: 'xs', class: 'filter-panel-item-toggle'
        } %}
    {% endif %}
{% endblock %}
